@using PresentationLayer.Models;
@using DataLayer.Enums;
@*@model HelloModel*@

@*@model List<DataLayer.Entityes.Directory>*@
@model List<DirectoryViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        @*<h1>@Model.HelloMessage</h1>*@
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <h2><a asp-action="Index" asp-controller="Page" asp-route-pageId="@item.Directory.Id" asp-route-pageType="@PageEnums.PageType.Directory" >@item.Directory.Title</a></h2>
                    <ul>
                        @if (item.Materials != null)
                        {
                            foreach (var subItem in item.Materials)
                            {
                                <li><a asp-action="Index" asp-controller="Page" asp-route-pageId="@subItem.Material.Id" asp-route-pageType="@PageEnums.PageType.Material">@subItem.Material.Title</a></li>
                            }
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>
</div>